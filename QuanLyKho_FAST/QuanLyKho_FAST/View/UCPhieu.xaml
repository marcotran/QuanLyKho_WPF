<UserControl x:Class="QuanLyKho_FAST.View.UCPhieu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:QuanLyKho_FAST.View"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="950"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Grid>
        <StackPanel>
            <Grid Name="AreaButton"
              Height="50" 
              Width="950" 
              Background="CornflowerBlue">
                <StackPanel Orientation="Horizontal">
                    <Button Name="btnPN" Height="50" Width="150" Background="Transparent" BorderBrush="Transparent" Click="btnPN_Click" >Phiếu nhập</Button>
                    <Button Name="btnPX" Height="50" Width="150" Background="Transparent" BorderBrush="Transparent" Click="btnPX_Click" >Phiếu xuất</Button>
                </StackPanel>
            </Grid>
            <Grid Name="GridMainRight" 
                  Height="650" 
                  Width="950"
                  Background="WhiteSmoke">
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>
